{
  "name": "galleria",
  "version": "1.2.3",
  "private": true,
  "type": "module",
  "description": "Static gallery (single media set, no duplication). Uses system ffmpeg for MP4 posters.",
  "scripts": {
    "thumbs": "node scripts/generate_thumbs.js ./public/media ./public/thumbs",
    "scan": "node scripts/generate_index.js ./public/media ./public",
    "prune": "node scripts/prune_build.js ./public",
    "build": "npm run thumbs && npm run scan && npm run prune",
    "serve": "npx http-server ./public -p 8080 -c-1"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "sharp": "^0.33.5"
  }
}